{
  "name": "circle-flags-ui",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "website"
  ],
  "description": "Monorepo for circle-flags UI components across multiple frameworks",
  "type": "module",
  "scripts": {
    "gen": "tsx scripts/gen.ts",
    "gen:flags": "tsx scripts/gen-flags.ts",
    "gen:svgs": "tsx scripts/gen-svgs.ts",
    "build": "pnpm run gen:flags && pnpm -r --filter './packages/*' run build",
    "build:core": "pnpm -F @sankyu/circle-flags-core run build",
    "build:react": "pnpm run gen:flags && pnpm -F @sankyu/react-circle-flags run build",
    "dev": "pnpm -F @sankyu/react-circle-flags run dev",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm -r --filter './packages/*' --filter './website' --if-present run lint",
    "lint:fix": "pnpm -r --filter './packages/*' --filter './website' --if-present run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "pnpm --filter @sankyu/react-circle-flags run test",
    "test:watch": "pnpm --filter @sankyu/react-circle-flags run test:watch",
    "test:coverage": "pnpm --filter @sankyu/react-circle-flags run test:coverage && pnpm --filter @sankyu/vue-circle-flags run test:coverage",
    "prepare": "husky",
    "clean": "rm -rf packages/*/dist packages/*/generated node_modules/.cache"
  },
  "author": "Sankyu Lab <opensource.sankyu-lab@xmsl.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SanKyu-Lab/circle-flags-ui.git"
  },
  "bugs": {
    "url": "https://github.com/SanKyu-Lab/circle-flags-ui/issues"
  },
  "homepage": "https://github.com/SanKyu-Lab/circle-flags-ui",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/node": "^25.0.8",
    "country-region-data": "^4.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
